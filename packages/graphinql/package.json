{
  "name": "@taskless/graphinql",
  "description": "A minimalist GraphQL client based on phin",
  "version": "3.6.1",
  "author": {
    "name": "Taskless.io",
    "email": "oss@taskless.io",
    "url": "https://taskless.io"
  },
  "license": "MIT",
  "homepage": "https://github.com/taskless/taskless/",
  "repository": "taskless/taskless.git",
  "scripts": {
    "build": "run-s tsup",
    "clean": "shx rm -rf dist && shx mkdir dist",
    "dev": "tsup --watch",
    "release:before:init": "run-s clean typecheck build test",
    "test": "ava",
    "tsup": "tsup",
    "typecheck": "tsc --noEmit"
  },
  "tsup": {
    "entry": {
      "index": "src/index.ts"
    },
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "minify": false
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "package.json",
    "README.md",
    "dist"
  ],
  "engines": {
    "node": ">=14.19.0"
  },
  "dependencies": {
    "cross-fetch": "^3.1.5",
    "isomorphic-unfetch": "^3.1.0",
    "p-retry": "^5.1.1"
  },
  "devDependencies": {
    "@types/node": "^17.0.45",
    "@types/node-fetch": "^2.6.2",
    "ava": "^4.3.0",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.4",
    "ts-node": "^10.8.1",
    "tsup": "^6.2.3",
    "typescript": "^4.8.3"
  },
  "publishConfig": {
    "access": "public"
  }
}

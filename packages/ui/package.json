{
  "name": "@taskless/ui",
  "description": "Common UI for Taskless.io and the Taskless Dev Client",
  "version": "3.4.0",
  "author": {
    "name": "Taskless.io",
    "email": "oss@taskless.io",
    "url": "https://taskless.io"
  },
  "license": "MIT",
  "homepage": "https://github.com/taskless/taskless/",
  "repository": "taskless/taskless.git",
  "scripts": {
    "build": "run-s tsup",
    "clean": "shx rm -rf dist",
    "dev": "tsup --watch",
    "release:before:init": "run-s clean typecheck build test",
    "test": "ava",
    "tsup": "tsup",
    "typecheck": "tsc --noEmit"
  },
  "tsup": {
    "entry": {
      "index": "src/index.ts"
    },
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "minify": false
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "package.json",
    "README.md",
    "dist"
  ],
  "engines": {
    "node": ">=14.19.0"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.3",
    "@heroicons/react": "^1.0.6",
    "classnames": "^2.3.2",
    "copy-to-clipboard": "^3.3.2",
    "prism-react-renderer": "^1.3.5"
  },
  "devDependencies": {
    "@types/node": "^17.0.41",
    "@types/react": "^17.0.40",
    "ava": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "shx": "^0.3.4",
    "ts-node": "^10.8.1",
    "tsup": "^6.2.3",
    "typescript": "^4.8.3"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

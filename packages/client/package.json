{
  "name": "@taskless/client",
  "description": "Core JavaScript client for Taskless.io",
  "version": "3.5.0",
  "author": {
    "name": "Taskless.io",
    "email": "oss@taskless.io",
    "url": "https://taskless.io"
  },
  "license": "MIT",
  "homepage": "https://github.com/taskless/taskless/",
  "repository": "taskless/taskless.git",
  "scripts": {
    "build": "run-s tsup",
    "clean": "shx rm -rf dist && shx mkdir dist",
    "codegen": "graphql-codegen --config codegen.yml",
    "dev": "tsup --watch",
    "release:before:init": "run-s clean typecheck codegen build test",
    "test": "ava",
    "tsup": "tsup",
    "typecheck": "tsc --noEmit"
  },
  "tsup": {
    "entry": {
      "index": "src/index.ts",
      "graphql": "src/graphql.ts"
    },
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "minify": false
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./graphql": {
      "types": "./dist/graphql.d.ts",
      "import": "./dist/graphql.js",
      "require": "./dist/graphql.cjs"
    }
  },
  "files": [
    "package.json",
    "README.md",
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14.19.0"
  },
  "dependencies": {
    "@taskless/graphinql": "3.5.0",
    "serialize-error": "^11.0.0",
    "tinyduration": "^3.2.2",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.12.1",
    "@graphql-codegen/typescript": "2.7.3",
    "@graphql-codegen/typescript-document-nodes": "2.3.3",
    "@graphql-codegen/typescript-operations": "2.5.3",
    "@types/node": "^17.0.45",
    "ava": "^4.3.0",
    "cross-env": "^7.0.3",
    "graphql": "^16.6.0",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.4",
    "ts-node": "^10.8.1",
    "tsup": "^6.2.3",
    "typescript": "^4.8.3"
  },
  "publishConfig": {
    "access": "public"
  }
}

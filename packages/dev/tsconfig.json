{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "./src",
    // next.js specific module settings
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    // -- next.js specific module settings
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false
  },
  "include": [
    "next-env.d.ts",
    "additional.d.ts",
    "boolean-parser.d.ts",
    "**/*"
  ],
  "exclude": ["node_modules"]
}

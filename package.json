{
  "private": true,
  "name": "@taskless/root",
  "version": "3.4.2",
  "repository": "taskless/taskless.git",
  "scripts": {
    "build": "pnpm run -r --filter='./packages/*' build",
    "dev": "pnpm run -r --filter='./packages/*' --parallel --stream dev",
    "dev:express": "FORCE_COLOR=1 pnpm run --filter='@taskless/dev' --filter='@taskless/examples-express' --stream dev",
    "dev:express-ts": "FORCE_COLOR=1 pnpm run --filter='@taskless/dev' --filter='@taskless/examples-express-ts' --stream dev",
    "dev:next": "FORCE_COLOR=1 pnpm run --filter='@taskless/dev' --filter='@taskless/examples-next' --stream dev",
    "docs": "pnpm run --filter='@taskless/docs' --stream dev",
    "eslint": "eslint",
    "husky": "husky",
    "lint-staged": "lint-staged",
    "postinstall": "husky install",
    "prettier": "prettier",
    "rel": "release-it",
    "rev": "release-it --preRelease",
    "syncpack": "syncpack",
    "test": "FORCE_COLOR=1 pnpm run -r --filter='./packages/*' --aggregate-output test"
  },
  "type": "module",
  "engines": {
    "node": ">=14.19.0",
    "pnpm": "7.x"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@next/eslint-plugin-next": "^12.2.4",
    "@release-it-plugins/workspaces": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^7.0.4",
    "lint-staged": "13.0.3",
    "madge": "^5.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.0",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "release-it": "^15.5.0",
    "shx": "^0.3.4",
    "syncpack": "^7.2.1",
    "typescript": "^4.8.3"
  }
}
